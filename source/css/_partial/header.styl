#header
  border-radius 8px 8px 0 0
  background #C6EAFA linear-gradient(#DDFBFC, #C6EAFA)
  position relative
  // padding: 0 8px;
  padding: 15px 30px 0
  border-bottom 1px solid #B2D2E1
  
  .blog-title
    float left
    font-family blog-title-font

  .title
    float left

  .nav
    float right
    font-size 0.875em
    font-family font-title
    line-height 2em

    .nav-ul
      list-style none
      li
        float left
        margin-left 20px

  h1
    margin 0
    padding 0
    font-size 1.5em
    font-weight normal
    line-height 1.2
    color #069
    text-shadow rgba(255, 255, 255, 0.9) 0 1px 0

  &.without-description h1
    margin 10px 0

  p
    margin 0
    color #61778B
    width 300px
    font-size 0.8125em
    font-style italic



#header::after {
  content: '';
  display: block;
  width: 0;
  height: 0;
  clear: both;
  visibility: hidden;
  zoom: 1;
}

